html {
  height: 100%;
}

body {
  min-height: 100%;
  margin: 0;
  padding: 0;
  position: relative;
}

.page-wrapper {
  min-height: 100vh;
  padding-bottom: 120px; /* フッターの高さ分の余白 */
  box-sizing: border-box;
  position: relative;
}

.main-content-wrapper {
  width: 100%;
  margin: 0 auto;
  padding: 1rem;
}

.container {
  max-width: 1200px;
  margin: 0 auto;
  padding: 0 1rem;
}

.writing-mode-container {
  position: relative;
}

/* フッターのスタイル */
.footer {
  position: absolute;
  bottom: 0;
  width: 100%;
  height: 120px; /* フッターの高さ */
  background-color: #f8f9fa;
}

.footer-content {
  display: flex;
  justify-content: center;
  align-items: center;
  flex-direction: column;
  text-align: center;
  padding: 1.5rem 0;
  height: 100%;
}

.footer-links {
  margin-bottom: 1rem;

  a {
    color: #6c757d;
    text-decoration: none;
    margin: 0 1rem;

    &:hover {
      color: #343a40;
    }
  }
}

.footer-copyright {
  color: #6c757d;
  font-size: 0.875rem;
}