<div class="row justify-content-center">
  <div class="col-md-8">
    <h1 class="text-center mb-4">お題一覧</h1>
    <% if @themes.present? %>
      <% @themes.each do |theme| %>
        <%= render partial: 'themes/theme', locals: { theme: theme } %>
      <% end %>
    <% else %>
      <p class="text-center text-muted">お題はまだありません</p>
    <% end %>

    <div class="mt-4">
      <%= paginate @themes %>
    </div>
  </div>
</div>